<% layout("/layouts/boilerplate") %>
<body>
  <div class="row body-container mt-3">
    <h3 class="row text-center">Signup</h3>
    <div class="col-6">
      <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            name="username"
            type="text"
            class="form-control"
            placeholder="Type your username"
            required
          />
          <div class="invalid-feedback">Username cannot be empty.</div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            name="email"
            type="email"
            class="form-control"
            placeholder="Type your email"
            required
          />
          <div class="invalid-feedback">Email cannot be empty.</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            name="password"
            type="password"
            class="form-control"
            placeholder="Type your password"
            required
          />
          <div class="invalid-feedback">Password cannot be empty.</div>
        </div>
        <button class="btn btn-danger">Signup</button>
      </form>
    </div>
  </div>
</body>
